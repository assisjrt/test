pipeline {
    agent { label "jenkins-agent" }

    stages {
        stage('SAST') {
            when {
                anyOf {
                    branch pattern: '^(main|staging|develop)$', comparator: 'REGEXP'
                    tag pattern: '^(v\d+\.\d+\.\d+$|v\d+\.\d+\.\d+-staging)$', comparator: 'REGEXP'
                }
            }

            steps {
                echo env.BRANCH_NAME
                echo env.TAG_NAME
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    echo "SAST..."
                    container('gosec') {
                        sh """
                            mkdir -p ./build/test-reports
                            gosec -r -fmt junit-xml -out ./build/test-reports/gosec-report.xml .
                        """
                    }
                }
            }

            post {
                always {
                    junit testResults: '**/build/test-reports/*.xml', allowEmptyResults: false
                }
            }
        }

        stage('Build') {
            when {
                anyOf {
                    branch 'main';
                    branch 'staging';
                    branch 'develop';
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+$/ }
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+-staging$/ }
                }
            }

            steps {
                echo "Building.."
            }
        }

        stage('Test') {
            when {
                anyOf {
                    branch 'main';
                    branch 'staging';
                    branch 'develop';
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+$/ }
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+-staging$/ }
                }
            }

            steps {
                echo "Testing..."
            }
        }

        stage('Deploy') {
            when {
                anyOf {
                    branch 'main';
                    branch 'staging';
                    branch 'develop';
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+$/ }
                    expression { env.TAG_NAME ==~ /^v\d+\.\d+\.\d+-staging$/ }
                }
            }

            steps {
                echo "Deploying...."
            }
        }
    }
}
